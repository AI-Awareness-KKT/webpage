<script>
/* Gallery slideshow script - generic and robust.
   Usage: initSlideshow({slideClass, thumbSelector, prevBtnSelector, nextBtnSelector, activeClass})
   We auto-initialize four slideshows if elements exist.
*/
function initSlideshow(options) {
  const slideClass = options.slideClass; // class name for slides (e.g., 'slides' or 'slides2')
  const thumbSelector = options.thumbSelector; // selector for thumbnails container items
  const prevBtn = options.prevBtn; // selector for prev button (within same slideshow container)
  const nextBtn = options.nextBtn;
  const activeClass = options.activeClass || 'active-slide';

  const slides = Array.from(document.getElementsByClassName(slideClass));
  if (slides.length === 0) return;

  // determine thumbnails container (we expect thumbnails to be in the next .thumbnails element or provided selector)
  let thumbs = [];
  if (options.thumbSelector) {
    try {
      thumbs = Array.from(document.querySelectorAll(options.thumbSelector));
    } catch(e){
      thumbs = [];
    }
  }

  let current = 0;
  function show(idx) {
    if (idx < 0) idx = slides.length - 1;
    if (idx >= slides.length) idx = 0;
    slides.forEach((s, i) => {
      s.classList.toggle(activeClass, i === idx);
    });
    if (thumbs.length) {
      thumbs.forEach((t, i) => t.classList.toggle('active', i === idx));
      // If thumbnail row is scrollable, ensure active thumb is visible
      if (thumbs[idx] && thumbs[idx].scrollIntoView) {
        thumbs[idx].scrollIntoView({behavior:'smooth', inline:'center', block:'nearest'});
      }
    }
    current = idx;
  }

  // Prev/Next functions
  function plus(n){ show(current + n); }

  // Attach events to prev/next buttons if present
  if (prevBtn) {
    const p = document.querySelector(prevBtn);
    if (p) p.addEventListener('click', () => plus(-1));
  }
  if (nextBtn) {
    const n = document.querySelector(nextBtn);
    if (n) n.addEventListener('click', () => plus(1));
  }

  // Attach click handlers to thumbnails (if provided)
  if (thumbs.length) {
    thumbs.forEach((t, i) => {
      t.addEventListener('click', () => show(i));
      t.style.cursor = 'pointer';
    });
  }

  // initialize
  show(0);

  // Expose methods for debugging if needed
  return {show, plus};
}

// On DOM ready, initialize the slideshows we created in the HTML.
document.addEventListener('DOMContentLoaded', function(){
  // Slideshow 1: main gallery (class 'slides', thumbnails '.thumbnails img' near it)
  initSlideshow({slideClass:'slides', thumbSelector:'.thumbnails img', prevBtn:'.slideshow-container .prev', nextBtn:'.slideshow-container .next'});
  // School-specific slideshows - they use slides2, slides3, slides4 classes and thumbnail containers with specific ids
  initSlideshow({slideClass:'slides2', thumbSelector:'#school2-thumbnails img', prevBtn:'.slideshow-container .prev', nextBtn:'.slideshow-container .next'});
  initSlideshow({slideClass:'slides3', thumbSelector:'#school3-thumbnails img', prevBtn:'.slideshow-container .prev', nextBtn:'.slideshow-container .next'});
  initSlideshow({slideClass:'slides4', thumbSelector:'#school4-thumbnails img', prevBtn:'.slideshow-container .prev', nextBtn:'.slideshow-container .next'});
});
</script>
