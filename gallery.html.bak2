  <title>Gallery Page</title>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet"/>

  <style>
    body {
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
      background: linear-gradient(to bottom right, #f4f7fa, #e6ecf5);
      color: #2d2d2d;
    }

    .logo-container {
      background: linear-gradient(to right, #003973, #e5e5be);
      text-align: center;
      padding: 20px 0;
    }

    .logo-container img {
      max-height: 120px;
      transition: transform 0.3s ease;
    }

    .logo-container img:hover {
      transform: scale(1.05);
    }

    .taskbar {
      background-color: white;
      border-bottom: 2px solid #d0e0f0;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      display: flex;
      justify-content: center;
      padding: 15px 0;
      position: sticky;
      top: 0;
      z-index: 999;
    }

    .taskbar a {
      color: #004080;
      text-decoration: none;
      margin: 0 25px;
      font-size: 18px;
      font-weight: 600;
      position: relative;
    }

    .taskbar a::after {
      content: '';
      position: absolute;
      width: 0;
      height: 2px;
      left: 0;
      bottom: -5px;
      background-color: #004080;
      transition: width 0.3s ease;
    }

    .taskbar a:hover::after {
      width: 100%;
    }

    .content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 40px 20px;
    }

    .section-heading {
      text-align: center;
      margin-bottom: 30px;
    }

    .section-heading h1 {
      font-size: 40px;
      color: #003366;
      margin-bottom: 10px;
    }

    .section-heading p {
      font-size: 20px;
      color: #555;
      margin: 0;
    }

    .slideshow-container {
      position: relative;
      margin: 20px auto;
      max-width: 1000px;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

    .slides, .slides2, .slides3, .slides4 {
      display: none;
      width: 100%;
      height: 500px; /* consistent height */
      object-fit: cover;
      border-radius: 16px;
    }

    .active-slide {
      display: block !important;
    }

    .prev, .next {
      position: absolute;
      top: 50%;
      z-index: 2;
      transform: translateY(-50%);
      background: rgba(0, 0, 0, 0.5);
      color: white;
      border: none;
      border-radius: 50%;
      padding: 10px 14px;
      font-size: 22px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .prev:hover, .next:hover {
      background: rgba(0, 0, 0, 0.8);
    }

    .prev { left: 15px; }
    .next { right: 15px; }

    .thumbnails {
      display: flex;
      flex-wrap: nowrap;
      gap: 10px;
      overflow-x: auto;
      padding: 10px;
      margin: 0 auto 30px;
      max-width: 1000px;
      justify-content: center;
    }

    .thumbnails img {
      height: 90px;
      width: 160px;
      object-fit: cover;
      cursor: pointer;
      border-radius: 10px;
      opacity: 0.7;
      border: 2px solid transparent;
      transition: transform 0.2s, opacity 0.2s;
    }

    .thumbnails img:hover,
    .thumbnails img.active {
      transform: scale(1.05);
      opacity: 1;
      border-color: #004080;
    }

    @media (max-width: 768px) {
      .taskbar a {
        margin: 0 12px;
        font-size: 16px;
      }

      .section-heading h1 {
        font-size: 32px;
      }

      .section-heading p {
        font-size: 16px;
      }

      .slides, .slides2, .slides3, .slides4 {
        height: 250px;
      }

      .thumbnails img {
        height: 70px;
        width: 100px;
      }
    }
  </style>
</head>
